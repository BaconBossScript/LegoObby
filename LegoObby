local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "BaconBoss Hub | Lego Obby Fun Escape [50 STAGES]", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

_G.farm = true

function farm()
     while _G.farm == true do
            for _, v in pairs(workspace.Map.Stages:GetDescendants()) do
                        if v.Name == "Spawn" then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
                            wait(0.1)
                        end
                    end
            wait(2)
            for _, v in pairs(workspace.Map.Stages:GetDescendants()) do
                        if v.Name == "Crate" then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
                            wait(.1)
                            mouse1click()
                            wait(.1)
                            mouse1release()
                            wait(1) 
                        end
                    end
            wait(.1)
            for _, v in pairs(workspace:GetChildren()) do
                        if v.Name == "Coin" then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
                            wait(0.1)
                        end
                    end
            wait(1)
            game.workspace.UGC.Roll.ProximityPrompt.HoldDuration = 0
            wait(1)
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = game.workspace.UGC.Roll.CFrame
            wait(1)
            game:GetService("VirtualInputManager"):SendKeyEvent(true, "E", false, game)
            wait(2)
            game.workspace.UGC.Restart.ProximityPrompt.HoldDuration = 0
            wait(1)
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = game.workspace.UGC.Restart.CFrame
            wait(2)
            game:GetService("VirtualInputManager"):SendKeyEvent(true, "E", false, game)
            wait(5)
        end
    
    end

local MainTab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

MainTab:AddLabel("Note: You Must Click For Break Chests")

MainTab:AddToggle({
	Name = "Super Auto Farm",
	Default = false,
	Callback = function(Value)
		_G.farm = Value
        farm()
	end    
})
